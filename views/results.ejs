<%- include("partials/head.ejs") %>

<body>
<h1 class="p-4 bg-info text-center"> Quotes Found </h1>
<hr>
<% for (i of quotes) { %>
        <%= i.quote %> <br>
        -<em>
        <a href="#" id="<%= i.authorId %>">
        <%= i.firstName %> <%= i.lastName %>
        </a>
        </em><br><br>
    <% } %>

<!-- Modal -->
<div class="modal fade"  id="authorModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Author Information</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
         <div id="authorInfo"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
</body>

<form action="/">
    <button class="btn btn-primary">Return to homepage</button>
</form>

<%- include("partials/foot.ejs") %>

<script src="/js/script.js"></script>
</body>
</html>